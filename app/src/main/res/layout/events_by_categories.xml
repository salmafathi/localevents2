<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" 
    android:padding="10dp"
    
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".EventsByCategories" >
    
    <Spinner
        android:id="@+id/citySpinner"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_centerHorizontal="true"
        android:background="#d5d4d3"
        android:gravity="center"       
        android:prompt="@string/weekday_prompt" >
		
    </Spinner>
    
     <!--  android:spinnerMode="dropdown"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="10dp"
        android:dropDownSelector="@android:drawable/btn_dropdown"
        android:gravity="center"-->
    
    <ListView
        android:id="@+id/address_listview"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/citySpinner"
         />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/citySpinner"
        android:layout_alignRight="@+id/citySpinner"
        android:layout_marginRight="15dp"
        android:src="@android:drawable/arrow_down_float" />

</RelativeLayout>
